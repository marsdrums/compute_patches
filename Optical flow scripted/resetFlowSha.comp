#version 460
layout(local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout(binding = 1, rgba32f) writeonly uniform image2D flowImg;

void main() {

    ivec2 gid = ivec2(gl_GlobalInvocationID.xy);
    ivec2 size = imageSize(flowImg);

    if(gid.x >= size.x || gid.y >= size.y) return;

    imageStore(flowImg, gid, vec4(0.0));
}

#version 460

layout(binding = 0, rgba32f) uniform image2D finalRender;

layout(local_size_x = 32, local_size_y = 32) in;

void main(){

    ivec2 gid = ivec2(gl_GlobalInvocationID.xy);
    ivec2 size = imageSize(finalRender);

    if(gid.x >= size.x || gid.y >= size.y) return;

    imageStore(finalRender, gid, vec4(0));
}
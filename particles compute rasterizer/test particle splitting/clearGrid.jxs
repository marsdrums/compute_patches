//Reset the canvas
#version 460

layout(local_size_x = 32, local_size_y = 32, local_size_z = 1) in;
layout(binding = 0, rgba32f) writeonly uniform image2D grid;

void main() {

    ivec3 gid = ivec3(gl_GlobalInvocationID.xyz);
    ivec2 size = ivec2(512);

    if(gid.x >= size.x || gid.y >= size.y) return;
    
    imageStore(grid, gid.xy + ivec2(gl_GlobalInvocationID.z*512,0), vec4(0.0));
}

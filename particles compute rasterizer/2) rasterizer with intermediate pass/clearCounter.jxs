//Reset the counter

#version 460

layout(local_size_x = 32) in;

layout(std430, binding = 0) buffer countBuff {
    uint count;
    uint counter[];
};

layout(binding = 3) uniform Config {
    uint counterDim;
};

void main() {

    uint gid = gl_GlobalInvocationID.x;

    if(gid >= counterDim) return;

    counter[gid] = 0u;
}
